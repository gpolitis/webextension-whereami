{
  "description": "Adds a flag icon to the toolbar indicating your IP geolocation.",
  "manifest_version": 3,
  "name": "whereami",
  "version": "1.1.2",
  "homepage_url": "https://github.com/gpolitis/webextension-whereami",

  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["alarms", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Display more information about your IP address",
    "default_icon": {
      "16": "icons/xx.svg",
      "32": "icons/xx.svg"
    }
  },
  "icons": {
    "48": "icons/main.svg",
    "96": "icons/main.svg"
  },  
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{b4562766-bbfb-4155-92cf-169a1eeb7fef}"
    }
  }
}
